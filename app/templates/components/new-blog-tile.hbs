{{#if newBlogForm}}
<h3 {{action 'blogFormShow'}}>- New Blog in {{category.title}}</h3>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label><br>
      {{input value=title class="title form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label><br>
      {{input value=author class="author form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label><br>
      {{input value=image class="image form-control"}}
    </div>

    <div class="form-group">
      <label for="article">Article</label><br>
      {{textarea rows="15" value=article class="article form-control"}}
    </div>

    <button {{action 'saveBlog'}}>Save</button>
  </form>
</div>
{{else}}
  <h3 {{action 'blogFormShow'}}>+ {{category.title}}</h3>
{{/if}}
