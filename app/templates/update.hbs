<h3>Editing {{model.title}}</h3>

<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label><br>
      {{input value=model.title class="title form-control"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label><br>
      {{input value=model.author class="author form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label><br>
      {{input value=model.image class="image form-control"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label><br>
      {{input value=model.date class="date form-control"}}
    </div>

    <div class="form-group">
      <label for="article">Article</label><br>
      {{textarea rows="15" value=model.text class="article form-control"}}
    </div>

    <button {{action 'update' model}}>Save</button>
  </form>
</div>
