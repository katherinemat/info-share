<h3>Editing {{model.title}}</h3>

<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=model.title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=model.author id="author"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=model.image id="image"}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=model.date id="date"}}
    </div>

    <div class="form-group">
      <label for="article">Article</label><br>
      {{input value=model.text id="article"}}
    </div>

    <button {{action 'update' model}}>Save</button>
  </form>
</div>
